# Portfolio RAG Chat Configuration
# Copy this file to .env and fill in your actual API keys/values

# Hugging Face API
HUGGINGFACE_API_KEY=your_huggingface_api_key_here

# Model Settings
RAG_EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2
RAG_LLM_MODEL=google/flan-t5-base
RAG_MAX_TOKENS=512
RAG_TEMPERATURE=0.7
RAG_MAX_CONTEXT_CHUNKS=5
RAG_CACHE_TIME=3600  # Embedding cache lifetime in seconds
RAG_MAX_RETRIES=3    # Number of API retry attempts

# Vector Database Settings
VECTOR_DIMENSION=384  # Dimension size for the all-MiniLM-L6-v2 model
VECTOR_INDEX_PATH=data/vector_index
CHUNK_SIZE=500
CHUNK_OVERLAP=100

# Rate Limiting
MAX_REQUESTS_PER_MINUTE=10
MAX_TOKENS_PER_DAY=50000  # Daily token consumption limit

# Security
ENABLE_RATE_LIMITING=true
API_KEY_VALIDATION=true   # Validate API keys before use
